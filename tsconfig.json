{
  "compilerOptions": {
    "outDir": "dist",
    "module": "commonjs",
    "target": "esnext",
    "sourceMap": false,
    "allowJs": true,
    "checkJs": true,
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "lib": [
      "es2017",
      "esnext.asynciterable",
      "DOM"
    ],
    "moduleResolution": "node",
  },
  "include": [
    "src/**/*",
    "config.json"
  ],
  "exclude": [
    "build.js",
  ]
}