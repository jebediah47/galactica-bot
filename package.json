{
  "name": "galactica-bot",
  "version": "6.2.5",
  "description": "An open-source Discord bot written in TypeScript using Discord.js v14.",
  "main": "src/main.ts",
  "type": "module",
  "scripts": {
    "dev": "bun --watch src/main.ts",
    "format": "prettier --write \"src/**/*.{ts,js,json}\"",
    "clean": "bun buildCleanup.mjs",
    "lint": "eslint . --ext .ts",
    "testbuild": "NODE_ENV=production tsc",
    "prisma:generate": "prisma generate",
    "prisma:planetscale": "prisma db push --schema=./prisma/schema.planetscale.prisma",
    "prisma:sqlite": "prisma db push",
    "prepush": "bun run clean && bun run lint && bun run testbuild && bun run clean",
    "prepare": "husky"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jebediah47/galactica-bot.git"
  },
  "author": "jebediah47",
  "license": "AGPL-3.0",
  "bugs": {
    "url": "https://github.com/jebediah47/galactica-bot/issues"
  },
  "homepage": "https://galacticabot.vercel.app/",
  "dependencies": {
    "@apollo/server": "^4.11.2",
    "@elysiajs/apollo": "^1.1.1",
    "@elysiajs/bearer": "^1.1.2",
    "@iamtraction/google-translate": "^2.0.1",
    "@prisma/client": "^5.21.1",
    "axios": "^1.7.7",
    "conf": "^13.0.1",
    "discord-tictactoe": "^4.2.0",
    "discord.js": "^14.16.3",
    "elysia": "^1.1.24",
    "figlet": "^1.7.0",
    "graphql": "^16.9.0",
    "mathjs": "^14.0.0",
    "pino": "^9.5.0",
    "prisma": "^5.21.1"
  },
  "devDependencies": {
    "@types/bun": "1.1.13",
    "@types/figlet": "1.7.0",
    "@types/node": "22.9.3",
    "@typescript-eslint/eslint-plugin": "8.15.0",
    "@typescript-eslint/parser": "8.15.0",
    "eslint": "8.57.1",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-prettier": "5.2.1",
    "husky": "9.1.7",
    "pino-pretty": "13.0.0",
    "prettier": "3.4.0",
    "tsconfig-paths": "4.2.0",
    "tslib": "2.8.1",
    "typescript": "5.7.2"
  }
}
