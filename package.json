{
  "name": "galactica-bot",
  "version": "6.2.5",
  "description": "An open-source Discord bot written in TypeScript using Discord.js v14.",
  "main": "src/main.ts",
  "type": "module",
  "scripts": {
    "dev": "bun --watch src/main.ts",
    "format": "biome check --write ./src",
    "clean": "bun buildCleanup.mjs",
    "lint": "biome check ./src",
    "testbuild": "cross-env NODE_ENV=production tsc",
    "prisma:planetscale": "prisma db push --schema=./prisma/schema.planetscale.prisma",
    "prepush": "bun run clean && bun run lint && bun run testbuild && bun run clean",
    "prepare": "husky"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jebediah47/galactica-bot.git"
  },
  "author": "jebediah47",
  "license": "AGPL-3.0",
  "bugs": {
    "url": "https://github.com/jebediah47/galactica-bot/issues"
  },
  "homepage": "https://galacticabot.vercel.app/",
  "dependencies": {
    "@iamtraction/google-translate": "^2.0.1",
    "@prisma/client": "^6.16.2",
    "axios": "^1.12.2",
    "conf": "^15.0.1",
    "discord-tictactoe": "^4.2.1",
    "discord.js": "^14.22.1",
    "elysia": "^1.4.8",
    "figlet": "^1.9.3",
    "mathjs": "^14.8.1",
    "pino": "^9.12.0",
    "prisma": "^6.16.2"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.4",
    "@types/bun": "1.2.22",
    "@types/figlet": "1.7.0",
    "@types/node": "24.5.2",
    "cross-env": "10.0.0",
    "husky": "9.1.7",
    "pino-pretty": "13.1.1",
    "tsconfig-paths": "4.2.0",
    "tslib": "2.8.1",
    "typescript": "5.9.2"
  }
}
